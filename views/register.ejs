<!DOCTYPE html>
<html>
<!-- HEAD -->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS-->
  
    <!-- Font-awesome-->
    <link rel="stylesheet" type="text/css"
          href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- JS -->
    <script src="js/jquery-3.2.1.min.js"></script>
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>

    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styleRegis.css" rel="stylesheet">
    <title>Registro - Devs Core</title>
</head>
<body id= "registerB">
    <div id="logoText">
        <h1>Devs Core</h1>
    </div>
<div id="login-content">
    <div id = "contenedorcentrado">
        <div id="imagenLogin">
            <form  method="post" action="/registerUser">
                <h3 class="login-head">
                    <i class="fa fa-lg fa-fw fa-user"></i><span>Reg√≠strate</span>
                </h3>
    
                <div class="form-group">
                    <label class="control-label">Nombre(s)</label>
                    <input class="form-control" type="text" id="nombres" placeholder="Nombre(s)" autofocus
                           name="name" required="true" >
                </div>
    
                <div class="form-group">
                    <label class="control-label">Primer Apellido</label>
                    <input class="form-control" type="text" id="primerA" placeholder="Primer Apellido" autofocus
                           name="lastname" required="true" >
                </div>
    
                <div class="form-group">
                    <label class="control-label">Segundo Apellido</label>
                    <input class="form-control" type="text" id="segundoA" placeholder="Segundo Apellido" autofocus
                           name="slastname" required="true" >
                </div>
    
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input class="form-control" id="email" type="email" placeholder="Email" autofocus
                           name="email" required="true">
                </div>
    
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input class="form-control" id="pass" type="password" placeholder="Password"
                           name="password" required="true">
                </div>
    
                <div class="form-group">
                    <label class="control-label">Repite Password</label>
                    <input class="form-control" id="rep_pass" type="password" placeholder="Password"
                           name="passwordConfirm" required="true">
                </div>
    
                <div class="form-group">
                    <label  class="control-label">Fecha de nacimiento:</label>
                    <input class="form-control" type="date" id="fechaNacimiento" name="date"  >
                </div>
                <br>
                <div class="form-group btn-container" style="display: flex; align-items: center; justify-content: space-between;">
                    <button id="registro" class="btn btn-dark btn-block" type="submit">
                        <i class="fa fa-sign-in fa-lg fa-fw"></i><span>Registro</span>
                    </button>
                    <a class="btn btn-dark btn-block" href="/">Regresar</a>
                </div>
    
            </form>
        </div>
        <div id="derecho">
            <img src="https://anthoncode.com/wp-content/uploads/2019/12/desarrollador-dicese-de-quien-aprovecha-todo-momento-para-iniciar-un-gran-proyecto.jpg" width="460" height="460">
        </div>
    </div>
</div>

</body>
<!-- JS -->
<script src="/js/popper.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/main.js"></script>
<script src="/js/plugins/pace.min.js"></script>
<script src="/js/plugins/bootstrap-notify.min.js"></script>

<script>
    var mensaje = getUrlParameter('mensaje');
    var tipoMensaje = getUrlParameter('tipoMensaje');
    var tipoError = getUrlParameter('tipoError');
    if (mensaje != "") {
        if (tipoMensaje == "") {
            tipoMensaje = 'alert-info';
        }
        if (tipoError == "repe"){
            $("#usuario").addClass('is-invalid');
            $("#email").addClass('is-invalid');
        }
        if (tipoError == "pass"){
            $("#pass").addClass('is-invalid');
            $("#rep_pass").addClass('is-invalid');
        }

        $.notify({
            title: "Error en el registro : ",
            message: mensaje,
            icon: 'fa fa-error'
        },{
            type: "danger"
        });
    }

    function getUrlParameter(name) {
        name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
        var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
        var results = regex.exec(location.search);
        return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
    };
</script>

</html>
